
@model List<Product>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/public/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>

<body class="text-gray-900 bg-gray-100 font-body" id="body">
    <!-- wrapper start -->
    <div class="pt-16 px-10 grid lg:grid-cols-5 pb-20">

        <div class="bg-black opacity-50 z-20 top-0 bottom-0 left-0 right-0 fixed hidden" id="overlay">
        </div>
        <!-- nav start -->
        <div class="lg:col-span-1">
            <nav>

                <ul class="hidden lg:block mr-10 mb-10" id="menu">
                    <div class="flex justify-between mb-6 px-2 md:mb-16">
                        <h1 class="font-bold uppercase">
                           
                                <i class="fas fa-user-ninja mr-2"></i>Current <span class="text-red-700">Categoty</span>
                          
                        </h1>
                        <div class="px-4 cursor-pointer lg:hidden" id="open-menu">
                            <i class="fas fa-bars"></i>
                        </div>
                    </div>

                    <li class="my-3 rounded-lg bg-custom-yellow px-4 py-2 font-bold mt-6">
                        <a class="rounded-lg py-2 px-3 text-md tracking-wider font-bold" href="/Home/Product/@ViewBag.catid">
                            <i class="fas fa-carrot mr-2"></i>
                            <span >@ViewBag.cat</span>
                        </a>
                    </li>
                    <div class="mt-16">
                        <span class="px-3 text-gray-500">Other</span>
                    <li class="my-3">
                        <a class="rounded-lg py-2 px-3 text-md tracking-wider font-bold" href="/Home/MyOrder">
                            <i class="fas fa-redo-alt mr-2"></i>
                            <span>My Orders</span>
                        </a>
                    </li>
                    <li class="my-3">
                        <a class="rounded-lg py-2 px-3 text-md tracking-wider font-bold" href="/Home/MyProfile">
                            <i class="fas fa-user-alt mr-2"></i>
                            <span>Profile</span>
                        </a>
                    </li>
</div>
        </ul>
        </nav>
    </div>
    <!--nav end-->
    <main class="lg:col-span-4">
       
        <div class="mt-16">
            <div>
                <span class="font-bold text-2xl md:text-4xl">Ninja  @ViewBag.cat </span><img src="~/public/images/hamburger.svg"
                                                                                      class="h-6 w-6 md:h-8 md:w-8 mb-3 ml-2 md:ml-5 inline-flex">
            </div>

            <div class="mt-5 grid lg:grid-cols-3 sm:grid-cols-2 gap-16">

                <!--card-->
                @foreach (var item in Model)
                {
                    <div class="bg-white rounded-lg shadow-md p-3 hover:shadow-lg item">
                        <img src="~/images/Product/@item.Image" alt="burger" class="w-full transform hover:scale-90 transition duration-300">
                        <div class="m-3 text-center">
                            <span class="font-bold text-xl">@item.Name</span>
                            <span class="block text-gray-600 text-sm">@item.Description</span>
                            <span class="block text-custom-yellow mt-10 font-bold text-3xl">@item.Price $</span>
                            <br />
                            <a class="rounded-lg bg-custom-yellow px-4 py-2 font-bold mt-6" href="/Home/AddOrder/@item.Id">Add to Order</a>
                        </div>
                    </div>
                }

               

            </div>

        </div>


    </main>
    

   
    </div>
    <!--wrapper end-->
    <script src="js/cart.js"></script>
    <script src="js/nav.js"></script>
    <script src="js/items.js"></script>
</body>

</html>
